# Supabase (required)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# OpenAI (optional — for AI summary feature)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# Polymarket Trading (server-side only)
POLYMARKET_PRIVATE_KEY=           # Polygon EOA private key (0x...)
POLYMARKET_CHAIN_ID=137
POLYMARKET_SIGNATURE_TYPE=0       # 0=EOA, 1=POLY_PROXY, 2=GNOSIS_SAFE
POLYMARKET_FUNDER_ADDRESS=        # Wallet address (same as EOA for type 0)
# RPC: set ONE of these (DRPC preferred, falls back to public node)
DRPC_API_KEY=                        # dRPC key — auto-builds https://lb.drpc.live/polygon/<key>
# POLYMARKET_RPC_URL=               # Or set a full RPC URL directly (overrides DRPC)
POLYMARKET_DRY_RUN=true           # true=simulated, false=live orders
POLYMARKET_MAX_POSITION_USD=50    # Max single order size
POLYMARKET_MAX_TOTAL_EXPOSURE_USD=500
POLYMARKET_AUTO_TRADE=false       # Enable auto-trading
POLYMARKET_AUTO_MIN_EDGE=0.05     # Min edge for auto-trade
POLYMARKET_AUTO_MIN_CONVICTION=45 # Min conviction score (0-100)
POLYMARKET_AUTO_MODELS_AGREE=true # Require model agreement
